{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "rules": {
        "quotes": [1, "single", "avoid-escape"],
        "curly": [1, "multi-line"],
        "indent": [2, 4],
        "no-labels": 0,
        "no-console": [0]
    },
    "extends": "eslint:recommended",
    "globals": {
        "chrome": true
    }
}
